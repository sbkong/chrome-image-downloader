{
  "manifest_version": 3,
  "name": "Alt+Click Image Downloader",
  "version": "1.0.0",
  "description": "",
  "permissions": [
    "downloads",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}